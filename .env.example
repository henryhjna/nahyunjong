# =============================================================================
# Local Development Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git - it's in .gitignore
# =============================================================================

# Database Configuration (for docker-compose.yml local development)
DB_NAME=nahyunjong_db
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# Server Configuration
SERVER_PORT=7341
NODE_ENV=development
JWT_SECRET=your_jwt_secret_here_generate_with_openssl_rand_base64_64

# Client Configuration
NEXT_PUBLIC_API_URL=http://localhost:7341
NEXT_PUBLIC_SITE_URL=https://nahyunjong.com

# Anthropic API (for AI story generation)
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Admin Configuration
ADMIN_EMAIL=na.hyunjong@gmail.com
ADMIN_USERNAME=nahyunjong

# =============================================================================
# AWS Configuration (for deployment)
# =============================================================================
# AWS credentials should be in ~/.aws/credentials
# Format:
# [default]
# aws_access_key_id = YOUR_ACCESS_KEY
# aws_secret_access_key = YOUR_SECRET_KEY
# =============================================================================

AWS_REGION=ap-northeast-2
AWS_ACCOUNT_ID=<YOUR_AWS_ACCOUNT_ID>
ECR_REGISTRY=<YOUR_AWS_ACCOUNT_ID>.dkr.ecr.ap-northeast-2.amazonaws.com

# EC2 Configuration
EC2_HOST=<YOUR_EC2_PUBLIC_IP>
EC2_USER=ubuntu
EC2_KEY_PATH=<PATH_TO_YOUR_KEY>.pem

# =============================================================================
# Notes:
# - Generate JWT_SECRET: openssl rand -base64 64
# - DB_PASSWORD: Use a strong password
# - ANTHROPIC_API_KEY: Get from https://console.anthropic.com/
# =============================================================================
