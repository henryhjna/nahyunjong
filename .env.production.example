# ========================================
# Production Environment Variables
# ========================================
# Copy this file to .env.production and fill in the values
# DO NOT commit .env.production to git

# ========================================
# Database Configuration
# ========================================
DB_NAME=nahyunjong_db
DB_USER=postgres
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# ========================================
# Server Configuration
# ========================================
SERVER_PORT=7341
NODE_ENV=production

# JWT Secret - Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_TO_SECURE_RANDOM_STRING

# ========================================
# Client Configuration
# ========================================
# Production API URL (use your domain)
NEXT_PUBLIC_API_URL=https://nahyunjong.com/api

# ========================================
# AI Story Generation
# ========================================
# Anthropic API key for Claude (get from: https://console.anthropic.com/)
ANTHROPIC_API_KEY=sk-ant-api03-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# ========================================
# AWS Configuration (for deployment)
# ========================================
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# ========================================
# Domain Configuration
# ========================================
DOMAIN_NAME=nahyunjong.com
DOMAIN_NAME_KR=nahyunjong.co.kr

# ========================================
# SSL/TLS Configuration
# ========================================
# Email for Let's Encrypt certificate notifications
CERTBOT_EMAIL=na.hyunjong@gmail.com

# ========================================
# Admin Configuration
# ========================================
ADMIN_EMAIL=na.hyunjong@gmail.com
ADMIN_USERNAME=nahyunjong

# ========================================
# Backup Configuration (optional)
# ========================================
# S3 bucket for database backups
BACKUP_S3_BUCKET=nahyunjong-backups
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# ========================================
# Monitoring (optional)
# ========================================
# Sentry DSN for error tracking
# SENTRY_DSN=https://xxxx@xxxx.ingest.sentry.io/xxxx

# CloudWatch logs
# ENABLE_CLOUDWATCH_LOGS=true
