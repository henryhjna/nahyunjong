FROM node:20-alpine

WORKDIR /app

# Install Python and pip (for story generation scripts)
RUN apk add --no-cache python3 py3-pip

# Install Python packages for story generation
RUN pip3 install --break-system-packages anthropic python-dotenv

# Install pnpm
RUN npm install -g pnpm

# Copy package files
COPY package.json pnpm-lock.yaml* ./

# Install dependencies
RUN pnpm install

# Copy source code
COPY . .

EXPOSE 7340

CMD ["pnpm", "dev"]
